  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Build for all",
      "runtimeArgs": ["--preserve-symlinks"],
      "program": "${workspaceFolder}/build.mjs",
      "args": ["--browser", "all"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Build for Chrome",
      "runtimeArgs": ["--preserve-symlinks"],
      "program": "${workspaceFolder}/build.mjs",
      "args": ["--browser", "chrome"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Build for Firefox",
      "runtimeArgs": ["--preserve-symlinks"],
      "program": "${workspaceFolder}/build.mjs",
      "args": ["--browser", "firefox"]
    }
  ]
}